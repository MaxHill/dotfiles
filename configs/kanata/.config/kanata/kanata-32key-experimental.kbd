;; ============================================================================
;; EXPERIMENTAL 32-KEY SPLIT KEYBOARD LAYOUT - SHIFTED UP ONE ROW
;; ============================================================================
;;
;; This layout shifts the entire keyboard up one row for more comfortable typing.
;; Your hands rest on what would traditionally be the QWERTY top letter row.
;;
;; Physical Input → Desired Output:
;;
;; Left hand      Right hand
;;
;; 34567          890-=        → QWERT YUIOP
;; werty          iop[]        → ASDFG HJKL;
;; asdfg          kl;'\        → ZXCVB NM,./
;;
;; ============================================================================

(defcfg
  process-unmapped-keys yes
)

;; ============================================================================
;; SOURCE LAYOUT
;; ============================================================================

(defsrc
  esc   f1    f2    f3    f4    f5    f6    f7    f8    f9    f10   f11   f12
  home  1     2     3     4     5     6     7     8     9     0     -     =    bspc
  tab   q     w     e     r     t     y     u     i     o     p     [     ]     ret
  caps  a     s     d     f     g     h     j     k     l     ;     '     \
  lsft  grv   z     x     c     v     b     n     m     ,     .     /     rsft
  fn    lctl  lalt  lmet              spc               rmet  ralt
)

;; ============================================================================
;; ALIASES
;; ============================================================================

(defalias
  ;; Tap-hold modifiers on traditional bottom row
  x_esc_ctl (tap-hold 200 200 esc lctl)    ;; X: tap=Escape, hold=Ctrl
  c_tab_opt (tap-hold 200 200 tab lalt)    ;; C: tap=Tab, hold=Option/Alt
  v_cmd     (tap-hold 200 200 _ lmet)      ;; V: tap=nothing, hold=Cmd
  
  ;; Layer activators (hold only)
  dot_nav   (layer-while-held nav)         ;; .: hold=Nav layer
  comma_sym (layer-while-held symbol)      ;; ,: hold=Symbol layer
  m_shft    (layer-while-held shift)       ;; M: hold=Shift layer
)

;; ============================================================================
;; BASE LAYER - ALPHA ONLY
;; ============================================================================
(deflayer base
  ;;        ╭─────────┬─────────┬─────────┬─────────┬─────────┬─────────┬─────────┬─────────┬─────────┬─────────┬─────────┬─────────┬─────────╮
  ;;        │  ESC    │  BRDN   │  BRUP   │         │         │         │         │  PREV   │  PLAY   │  NEXT   │  MUTE   │  VOL-   │  VOL+   │
  _          brdn      brup      _         _         _         _         prev      pp        next      mute      vold      volu
  ;;        ├─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────╮
  ;;        │         │         │         │  Q      │  W      │  E      │  R      │  T      │  Y      │  U      │  I      │  O      │  P      │         │
  _          _         _         q         w         e         r         t         y         u         i         o         p         _
  ;;        ├─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┤
  ;;        │         │         │  A      │  S      │  D      │  F      │  G      │         │  H      │  J      │  K      │  L      │  BSPC   │         │
  _          _         a         s         d         f         g         _         h         j         k         l         bspc      _
  ;;        ├─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┤
  ;;        │         │  Z      │  X      │  C      │  V      │  B      │         │         │  N      │  M      │  ,      │  .      │  ENTER  │
  _          z         x         c         v         b         _         _         n         m         ,         .         ret
  ;;        ├─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┤
  ;;        │         │         │ESC/CTRL │TAB/OPT  │  CMD    │         │         │         │  SHFT   │  SYM    │  NAV    │         │         │
  _          _      @x_esc_ctl @c_tab_opt @v_cmd      _         _         _      @m_shft @comma_sym @dot_nav    _         _
  ;;        ├─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┼─────────┴─────────┴─────────┴─────────╯
  ;;        │         │         │         │         │         │  SPC    │         │         │         │
  _          _         _         _                             spc                           _         _
  ;;        ╰─────────┴─────────┴─────────┴─────────┴─────────┴─────────┴─────────┴─────────┴─────────╯
)

